<div style="display:block; border: 3px solid red; margin: 0 auto; position: relative; margin-top: 20%;">

<form>
  <div class="form-group">
   	<%= form_for @contact do |f| %>
   	<%= f.label :name %><br>
    <%= f.text_field :name, required: true %> 
  </div>
  <div class="form-group">
   	<%= f.label :email %> <br>
    <%= f.text_field :email, required: true %> 
  </div>
  <div class="form-group">
   	 <%= f.label :message %> <br>
   	 <%= f.text_area :message, as: :text %> 
  </div>
   <div class="form-group" style="display: none;">
    <%= f.label :nickname %> <br>
    <%= f.text_area :nickname, hint: 'Ne pas remplir ce champs' %> 
  	</div>
 	 <br>
  	<%= f.submit 'Envoyer le message', class:"btn btn-primary"  %>
  <% end %>
</form>

</div>
